    "version",
    "checker"
  ],
  "author": "nickromney",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.3"
  }
}
