<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Projects</h1>
  <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
</div>

<% if @projects.any? %>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to project.name, project %></h5>
            <p class="card-text text-muted"><%= project.description %></p>

            <div class="mb-2">
              <small class="text-muted">
                <i class="bi bi-person"></i> <%= project.owner.name %>
                <% if project.user_group %>
                  | <i class="bi bi-people"></i> <%= project.user_group.name %>
                <% end %>
              </small>
            </div>

            <hr>

            <div class="d-flex justify-content-between align-items-center">
              <div>
                <span class="badge bg-secondary"><%= project.servers.count %> servers</span>
              </div>
              <div>
                <%= link_to "View", project, class: "btn btn-sm btn-primary" %>
                <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    <p class="mb-0">No projects yet. <%= link_to "Create your first project", new_project_path %>!</p>
  </div>
<% end %>
